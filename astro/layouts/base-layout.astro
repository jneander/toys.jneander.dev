---
interface Props {
  title: string
}

const {title} = Astro.props

import '../styles/main.scss'
---

<!doctype html>
<html dir="ltr" lang="en">
  <head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>{title}</title>

    <meta name="description" content="Breakable toys for fun and learning!" />
    <meta name="generator" content={Astro.generator} />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body class="base no-transition">
    <header>
      <div class="wrapper no-max-inline">
        <a href="/">Toys</a>
      </div>
    </header>

    <div>
      <slot />
    </div>

    <footer>
      <div class="wrapper">
        <div data-section="site-links">
          <p>Look around.</p>

          <ul class="plain" role="list">
            <li>
              <a href="/artifacts">The Toys</a>
            </li>

            <li>
              <a href="/acknowledgements">Acknowledgements</a>
            </li>
          </ul>
        </div>

        <div data-section="social-links">
          <p>Connect with me!</p>

          <ul class="plain" role="list">
            <li>
              <a href="https://www.jneander.dev">jneander.dev</a>
            </li>

            <li>
              <a href="https://masto.jln.io/@jeremy" rel="me">Mastodon</a>
            </li>

            <li>
              <a href="https://www.github.com/jneander" rel="external">GitHub</a>
            </li>

            <li>
              <a href="https://codepen.io/jneander" rel="external">CodePen</a>
            </li>

            <li>
              <a href="https://www.linkedin.com/in/jeremyneander/" rel="external">LinkedIn</a>
            </li>
          </ul>
        </div>

        <p data-section="legal">
          <small>© 2017–Present Jeremy Neander.</small>
        </p>
      </div>
    </footer>

    <script>
      document.body.classList.remove('no-transition')
    </script>
  </body>
</html>
